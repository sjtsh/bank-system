@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <form class="login-form" id="login-form" asp-action="login" asp-controller="auth">
            <h3 class="text-center my-3">Login Now</h3>
            <!-- Email input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example1">Email address</label>
                <input asp-for="PhoneNumber" class="form-control" required />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example2">Password</label>
                <input type="password" asp-for="Password" class="form-control" required />
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
            <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
            <div>
                <a href="/Home/Register">Don't have account. Click here</a>
            </div>

        </form>
    </div>
</div>

